
     <em class="reserva_mesa">Reserva tu mesa</em>
      <%= form_for @himalaya, :validate => true do |f| %>

      <div class="field">
   <br><%= f.label :personas , "Selecciona Persona(s)"%></br>
           <%=f.select(:persona,[ ["2 Personas","2 " ],
           ["1 persona","1" ],  ["2 personas", "2"], ["3 personas", "3"], ["4 personas", "4"], ["5 personas", "5"], ["6 personas", "6"], ["7 personas", "7"],  ["8 personas", "8"], ["9 personas", "9"], ["10 personas", "10"],["11 personas", "11"], ["12 personas", "12"]],{}, { :class => 'basic' })%>
      </div>


      <div class="field">
    <%= f.label :hora , "Selecciona hora "%></br>
      <%=f.select :hora,[[time,time ],["Comida","" ],["1:00","1:00" ],  ["1:30", "1:30"],   ["2:00", "2:00"], ["2:30", "2:30"], ["3:00", "3:00"], ["3:30", "3:30"], ["4:00", "4:00"], ["Cena","" ],  ["20:00", "20:00"], ["20:30", "20:30"], ["21:00", "21:00"],["21:30", "21:30"], ["22:00", "22:00"], ["22:30", "22:30"],["23:00", "23:00"],["23:30", "23:30"]#, ["24:00", "24:00"]
                    ]%>
      </div>

      <%if descount %>

      <div class="field">
          <%= f.label :menu ,"Selecciona de menu"%></br>
                     <%=f.select :menu,[ ["Carta 40% Descuento","Carta 40% Descuento" ] ] %>
               </div>

      <% elsif  free %>

      <div class="field">
       <%= f.label :menu , "Selecciona de menu"%></br>
              <%=f.select :menu,[["Gratis primero plato","gratis primero" ],["Menu Degustion  ", "Menu Degustion 18 €"],  ["Menu Degustion 20", "Menu Degustion 20€"]
               ] %>
        </div>
        <%  else %>
        <div class="field">
      <%= f.label :menu , "Selecciona de menu"%></br>
                <%=f.select :menu,[["Carta","Carta" ], ["Menu Degustion 20", "Menu Degustion 20€"]
                 ] %>
          </div>
          <%end%>

     <div class="fecha">
      <%= f.text_field :fecha, id: 'himalaya' %>
    </div>

    <div id="himalaya_datepicker"></div>
      <div class="field">
        <%= f.text_field :nombre, placeholder: 'Nombre' %>
      </div>
       <div class="field">
         <%= f.text_field :apellidos, placeholder: 'Apellidos'%>
      </div>
      <div class="field">
     <%= f.text_field :email, placeholder: 'Email' %>
      </div>
  <div class="field">
 <%= f.text_field :telefono , placeholder:"Telefono" %>
  </div>
   <div class="actions">
      <%= f.submit("Reserva ") %>
  </div>

<% end %>



